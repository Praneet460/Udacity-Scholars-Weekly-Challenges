<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#eeeeee"
    android:layout_height="match_parent">

        <!--Changed the ImageButton to TextView-->



        <android.support.v7.widget.CardView
            android:layout_margin="8dp"
            android:layout_width="match_parent"
            card_view:cardUseCompatPadding="true"
            card_view:cardBackgroundColor="#ffffff"
            android:layout_height="wrap_content"
            card_view:cardElevation="4dp"
            card_view:cardCornerRadius="4dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                        <TextView
                            android:layout_alignParentStart="true"
                            android:gravity="center_horizontal"
                            android:id="@+id/tv_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:layout_centerVertical="true"
                            android:textColor="@android:color/primary_text_light"
                            android:textSize="18sp"
                            android:padding="16dp"
                            tools:text="Linear Layout"/>

                        <RelativeLayout
                            android:id="@+id/first_row"
                            android:layout_alignParentEnd="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/item_three"
                            android:layout_width="60dp"
                            android:layout_height="30dp"
                            android:layout_alignParentEnd="true"
                            android:background="#d70000"/>

                        <ImageView
                            android:id="@+id/item_two"
                            android:layout_width="60dp"
                            android:layout_height="30dp"
                            android:layout_toStartOf="@id/item_three"
                            android:background="#04ff00"/>

                        <ImageView
                            android:id="@+id/item_one"
                            android:layout_width="60dp"
                            android:layout_height="30dp"
                            android:layout_toStartOf="@id/item_two"
                            android:background="@color/colorPrimaryDark"/>
                </RelativeLayout>

                        <RelativeLayout
                            android:layout_below="@id/first_row"
                            android:id="@+id/second_row"
                            android:layout_alignParentEnd="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                                <ImageView
                                    android:id="@+id/item_three_row_two"
                                    android:layout_width="60dp"
                                    android:layout_height="30dp"
                                    android:layout_alignParentEnd="true"
                                    android:background="#ffaa00"/>

                                <ImageView
                                    android:id="@+id/item_two_row_two"
                                    android:layout_width="60dp"
                                    android:layout_height="30dp"
                                    android:layout_toStartOf="@id/item_three_row_two"
                                    android:background="#00ffff"/>

                                <ImageView
                                    android:id="@+id/item_one_row_two"
                                    android:layout_width="60dp"
                                    android:layout_height="30dp"
                                    android:layout_toStartOf="@id/item_two_row_two"
                                    android:background="#ffffff"/>
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_below="@id/second_row"
                            android:id="@+id/third_row"
                            android:layout_alignParentEnd="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                                <ImageView
                                    android:id="@+id/item_three_row_three"
                                    android:layout_width="60dp"
                                    android:layout_height="30dp"
                                    android:layout_alignParentEnd="true"
                                    android:background="#d70000"/>

                                <ImageView
                                    android:id="@+id/item_two_row_three"
                                    android:layout_width="60dp"
                                    android:layout_height="30dp"
                                    android:layout_toStartOf="@id/item_three_row_three"
                                    android:background="#04ff00"/>

                                <ImageView
                                    android:id="@+id/item_one_row_three"
                                    android:layout_width="60dp"
                                    android:layout_height="30dp"
                                    android:layout_toStartOf="@id/item_two_row_three"
                                    android:background="@color/colorPrimaryDark"/>
                        </RelativeLayout>

                </RelativeLayout>
        </android.support.v7.widget.CardView>

</RelativeLayout>
