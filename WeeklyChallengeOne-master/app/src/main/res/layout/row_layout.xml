<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/title_text_id"
        tools:text="Name or Title"
        tools:background="@color/constraintLayoutColorPrimaryDark"
        style="@style/RowItemTitleTextStyle" />

    <include
        android:id="@+id/focused_card_include_id"
        layout="@layout/focused_card_layout"
        android:layout_margin="@dimen/row_item_card_margin"
        android:layout_width="@dimen/match_constraint_0dp"
        android:layout_height="wrap_content"
        style="@style/ConstraintCenterInParentStyle"
        android:visibility="gone" />

</android.support.constraint.ConstraintLayout>
